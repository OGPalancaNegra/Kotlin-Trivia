<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.kotlintrivia.RulesFragment">

    <TextView
        android:text="@string/trivia_rules"
        style="@style/MainTextStyles"
        android:textSize="@dimen/answer_text_size"
        android:id="@+id/rulesImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/horizontal_margin"
        android:layout_marginTop="@dimen/category_selection_mrgnsz"
        android:layout_marginEnd="@dimen/horizontal_margin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
         />

    <TextView
        android:id="@+id/rulesText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/horizontal_margin"
        android:layout_marginTop="@dimen/category_selection_mrgnsz"
        android:layout_marginEnd="@dimen/horizontal_margin"
        android:text="@string/rules_text"
        style="@style/MainTextStyles"
        android:fontFamily="@font/poppins_light"
        android:textStyle="normal"
        android:textSize="20dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rulesImage" />

</androidx.constraintlayout.widget.ConstraintLayout>